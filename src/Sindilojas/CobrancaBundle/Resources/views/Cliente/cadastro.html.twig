        jQuery(document).ready(function(){
            jQuery("#cliente_cpf").mask("999.999.999-99");
            jQuery("#cliente_nascimento").mask("99/99/9999").datepicker();;
            jQuery("#cliente_telefone").mask("(99) 9999-9999?9");
            jQuery("#cliente_cep").mask("99999-999", 
