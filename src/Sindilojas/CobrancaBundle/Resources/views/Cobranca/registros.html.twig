<div class="panel panel-default registros">
    <div class="panel-heading">
        <h4 class="panel-title">Registros</h4>
    </div><!-- panel-heading -->
    <div class="panel-body">
        <input id="idCliente" name="idCliente" type="hidden" value="{{ cliente.getId() }}"/>
        <textarea placeholder="Novo Registro" rows="5" name="textRegistro" id="textRegistro" class="form-control"></textarea> <br/>
        <button class="btn btn-primary" id="inserirRegistro" type="button">Inserir</button>
        <div class="table-responsive">
            <table id="registros" class="table mb30">
                <thead>
                    <tr>
                        <th colspan="2"><h4>Hist√≥rico de contatos</h4></th>
                    </tr>
                </thead>
                <tbody>
                    {% for registro in cliente.getRegistros() %}
                    <tr>
                        <td width="20%" >{{ registro.getData.format('d/m/Y h:i:s') }}</td>
                        <td width="80%" >{{ registro.getTexto() }}</td>
                    </tr>
                    {% else %}
                    <tr id="NenhumRegistro">
                        <td colspan="2">Nenhum contato com este cliente</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div><!-- panel-body -->
</div>