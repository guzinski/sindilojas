        <div class="media">
            <div class="pageicon pull-left">
                <i class="fa fa-th-list"></i>
            </div>
            <div class="media-body">
                <ul class="breadcrumb">
                    <li><a href="{{ path('_index') }}"><i class="glyphicon glyphicon-home"></i></a></li>
                    <li><a href="{{ path('_clientes') }}">Clientes</a></li>
                    <li>Ficha do Cliente</li>
                </ul>
                <h4>Ficha do Cliente</h4>
            </div>
        </div><!-- media -->
    </div><!-- pageheader -->
     <div class="contentpanel">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">Buscar Cliente</h4>
            </div><!-- panel-heading -->
            <div class="panel-body">
                <p>Insira o Cpf do cliente abaixo.</p>
                <label>CPF</label>
                <div class="input-group mb15">
                    <div ><input type="text" class="form-control" id="cpf"></div>
                </div><!-- input-group -->

            </div><!-- panel-body -->
        </div>
     </div><!-- contentpanel -->
{% endblock %}
