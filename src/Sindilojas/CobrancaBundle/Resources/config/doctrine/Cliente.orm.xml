<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Sindilojas\CobrancaBundle\Entity\Cliente" table="cliente">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nome" type="string" column="nome" length="50" nullable="false"/>
    <field name="cpf" type="string" column="cpf" length="11" nullable="false"/>
    <field name="rg" type="string" column="rg" length="12" nullable="false"/>
    <field name="cep" type="string" column="cep" length="10" nullable="false"/>
    <field name="uf" type="string" column="uf" length="2" nullable="false"/>
    <field name="cidade" type="string" column="cidade" length="100" nullable="false"/>
    <field name="bairro" type="string" column="bairro" length="50" nullable="false"/>
    <field name="rua" type="string" column="rua" length="150" nullable="false"/>
    <field name="numero" type="string" column="numero" length="30" nullable="false"/>
    <field name="complemento" type="string" column="complemento" length="30" nullable="true"/>
    <field name="email" type="string" column="email" length="150" nullable="false"/>
    <field name="telefone" type="string" column="telefone" length="20" nullable="false"/>
    <field name="nascimento" type="date" column="nascimento" nullable="false"/>
  </entity>
</doctrine-mapping>
